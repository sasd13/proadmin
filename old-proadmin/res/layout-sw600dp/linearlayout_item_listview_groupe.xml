<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbarStyle="insideOverlay"
    android:scrollbars="horizontal" >
    
    <View
		android:layout_width="fill_parent"
		android:layout_height="10dp"
		android:background="#ffffff" />

    <LinearLayout
    	android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#96b2c6"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
            	android:id="@+id/listViewGroupe_idGroupe"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_marginRight="10dp"
            	android:focusable="false"
            	android:focusableInTouchMode="false"
            	android:text="@string/listViewGroupe_idGroupe"
            	android:textAppearance="?android:attr/textAppearanceLarge"
            	android:textColor="#003961"
            	android:textSize="15sp"
            	android:textStyle="bold" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/listViewGroupe_libelle_projet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:focusable="false"
            	android:focusableInTouchMode="false"
                android:text="@string/listViewGroupe_libelle_projet"
                android:textColor="#ffffff"
                android:textSize="12sp" />
            
            <TextView
            	android:id="@+id/listViewGroupe_idProjet"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_marginRight="5dp"
            	android:focusable="false"
            	android:focusableInTouchMode="false"
            	android:text="@string/listViewGroupe_idProjet"
            	android:textAppearance="?android:attr/textAppearanceLarge"
            	android:textColor="#ffffff"
            	android:textSize="12sp"
            	android:textStyle="bold" />
        	
        	<TextView
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_marginRight="5dp"
            	android:focusable="false"
            	android:focusableInTouchMode="false"
            	android:text="@string/separateur_trait"
            	android:textAppearance="?android:attr/textAppearanceLarge"
            	android:textColor="#ffffff"
            	android:textSize="12sp"
            	android:textStyle="bold" />

            <TextView
                android:id="@+id/listViewGroupe_nomProjet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
            	android:focusableInTouchMode="false"
                android:text="@string/libelle_developpement_android"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/listViewGroupe_libelle_nbrEtudiants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:focusable="false"
            	android:focusableInTouchMode="false"
                android:text="@string/listViewGroupe_libelle_nbrEtudiants"
                android:textColor="#ffffff"
                android:textSize="12sp" />
            
            <TextView
            	android:id="@+id/listViewGroupe_nbrEtudiants"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_marginRight="5dp"
            	android:focusable="false"
            	android:focusableInTouchMode="false"
            	android:text="@string/listViewGroupe_nbrEtudiants"
            	android:textAppearance="?android:attr/textAppearanceLarge"
            	android:textColor="#ffffff"
            	android:textSize="12sp"
            	android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>