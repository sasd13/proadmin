                    android:id="@+id/Spinner09"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"
                    android:entries="@array/table_groupes"
                    android:paddingLeft="10dp" />

                <Spinner
                    android:id="@+id/Spinner05"
                    android:layout_width="99dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"
                    android:entries="@array/table_niveaux"
                    android:paddingLeft="10dp" />

                <Spinner
                    android:id="@+id/Spinner04"
                    android:layout_width="99dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"
                    android:entries="@array/table_projets"
                    android:paddingLeft="10dp" />

                <Button
                    android:id="@+id/Button06"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="#337caa"
                    android:paddingLeft="10dp"
                    android:text="15 : 30"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/Button03"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="#dda600"
                    android:text="16 : 00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:orientation="horizontal" >

                <Spinner
                    android:id="@+id/Spinner06"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"
                    android:entries="@array/table_groupes"
                    android:paddingLeft="10dp" />

                <Spinner
                    android:id="@+id/Spinner07"
                    android:layout_width="99dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"
                    android:entries="@array/table_niveaux"
                    android:paddingLeft="10dp" />

                <Spinner
                    android:id="@+id/Spinner08"
                    android:layout_width="99dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"
                    android:entries="@array/table_projets"
                    android:paddingLeft="10dp" />

                <Button
                    android:id="@+id/Button05"
                    android:layout_width="100dp"
