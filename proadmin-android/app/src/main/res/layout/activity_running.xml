<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AndroidEX.Activity"
    android:paddingTop="@dimen/activity_padding">

    <RelativeLayout
        android:id="@+id/running_relativelayout_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/activity_padding"
        android:paddingRight="@dimen/activity_padding">

        <TextView
            android:id="@+id/running_textview_title_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/running_textview_title_project"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <View
            android:id="@+id/running_dividerview_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/running_textview_title_project"
            android:layout_marginTop="@dimen/view_margin_medium"
            android:background="@color/orange" />

        <TextView
            android:id="@+id/running_textview_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/running_dividerview_1"
            android:layout_marginTop="@dimen/view_margin_medium"
            android:text="@string/running_textview_project"
            android:textSize="@dimen/text_size_medium"
            android:ellipsize="end"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/running_relativelayout_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/running_relativelayout_project"
        android:layout_marginTop="@dimen/viewgroup_margin_medium"
        android:paddingLeft="@dimen/activity_padding"
        android:paddingRight="@dimen/activity_padding">

        <TextView
            android:id="@+id/running_textview_title_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/running_textview_title_year"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <View
            android:id="@+id/running_dividerview_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/running_textview_title_year"
            android:layout_marginTop="@dimen/view_margin_medium"
            android:background="@color/orange" />

        <TextView
            android:id="@+id/running_textview_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/running_dividerview_2"
            android:layout_marginTop="@dimen/view_margin_medium"
            android:text="@string/running_textview_year"
            android:textSize="@dimen/text_size_medium" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/running_relativelayout_year"
        android:layout_marginTop="@dimen/viewgroup_margin_medium">

        <RelativeLayout
            android:id="@+id/running_view_tab_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/activity_padding"
            android:paddingRight="@dimen/activity_padding">

            <TextView
                android:id="@+id/running_textview_title_teams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/running_textview_title_teams"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <View
                android:id="@+id/running_dividerview_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/running_textview_title_teams"
                android:layout_marginTop="@dimen/view_margin_medium"
                android:background="@color/orange" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/running_view_tab_title">

            <RelativeLayout
                android:id="@+id/running_view_load"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/running_progressbar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/splashscreen_progressbar_margin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/running_view_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/running_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:paddingLeft="@dimen/activity_padding"
                    android:paddingRight="@dimen/activity_padding"
                    android:scrollbarStyle="outsideOverlay"
                    android:scrollbars="vertical" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>