<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/AndroidEX.Recycler.Item"
    android:minHeight="@dimen/recycleritem_height_medium"
    android:weightSum="10"
    android:paddingTop="@dimen/recycleritem_padding_vertical"
    android:paddingBottom="@dimen/recycleritem_padding_vertical">

    <TextView
        android:id="@+id/tabitem_textview_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/recycleritem_padding_horizontal"
        android:layout_marginRight="@dimen/recycleritem_padding_horizontal"
        android:layout_gravity="left|center_vertical"
        android:layout_weight="7"
        android:gravity="center_vertical"
        android:text="@string/tabitem_textview_label"
        android:textColor="?textColorPrimary"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:ellipsize="end"/>

</LinearLayout>

