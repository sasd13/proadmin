<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/tabitem_team_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/recycleritem_padding">

        <TextView
            android:id="@+id/tabitem_team_textview_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="left|center_vertical"
            android:text="@string/tabitem_team_textview_code"
            android:textColor="@color/customBlue"
            android:textSize="@dimen/textsize_xlarge"
            android:textStyle="bold"/>

    </RelativeLayout>

    <View
        android:id="@+id/tabitem_team_dividerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerview_height_small"
        android:layout_below="@id/tabitem_team_relativelayout"
        android:layout_marginTop="@dimen/recycleritem_padding"
        android:background="@color/primary_material_light"/>

</RelativeLayout>

