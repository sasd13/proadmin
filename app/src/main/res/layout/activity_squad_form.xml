<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/form_squad_linearlayout_activity_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:background="#116389"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="28dp"
            android:layout_height="30dp"
            android:background="#659025"
            android:src="@drawable/ic_squad" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="#659025"
            android:gravity="center|right"
            android:paddingRight="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/form_squad_linearlayout_activity_title"
        android:padding="@dimen/activitycontent_padding"
        android:scrollbarStyle="outsideOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/form_squad_textview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/form_squad_textview_title"
                android:textColor="#659025"
                android:textSize="@dimen/textsize_medium"
                android:textStyle="bold|italic"/>

            <View
                android:id="@+id/form_squad_textview_title_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/form_squad_textview_title"
                android:layout_marginTop="@dimen/dividerview_margintop"
                android:background="#659025" />

            <LinearLayout
                android:id="@+id/form_squad_linearlayout_year"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/form_squad_textview_title_divider"
                android:weightSum="2">

                <TextView
                    android:id="@+id/form_squad_textview_year"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:background="#659025"
                    android:padding="7dp"
                    android:text="@string/form_squad_textview_year"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/form_squad_textview_squad_year"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:padding="7dp"
                    android:background="@color/white"
                    android:ellipsize="end" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/form_squad_linearlayout_id"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/form_squad_linearlayout_year"
                android:layout_marginTop="30dp"
                android:weightSum="2"
                android:gravity="center">

                <TextView
                    android:id="@+id/form_squad_textview_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:background="#659025"
                    android:padding="7dp"
                    android:text="@string/form_squad_textview_id"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/form_squad_textview_squad_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:padding="7dp"
                    android:background="@color/white"
                    android:ellipsize="end"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/form_squad_linearlayout_project"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/form_squad_linearlayout_id"
                android:layout_marginTop="30dp"
                android:weightSum="2"
                android:gravity="center">

                <TextView
                    android:id="@+id/form_squad_textview_project"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:background="#659025"
                    android:padding="7dp"
                    android:text="@string/form_squad_textview_project"
                    android:textColor="@color/white" />

                <Spinner
                    android:id="@+id/form_squad_spinner_project"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/spinner_default_holo_light"
                    android:prompt="@string/spinner_project"/>

            </LinearLayout>

            <EditText
                android:id="@+id/form_squad_edittext_squad_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/form_squad_linearlayout_project"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:background="@drawable/edit_text_holo_light"
                android:hint="@string/form_squad_edittext_squad_name_hint"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:singleLine="true" />

            <RelativeLayout
                android:id="@+id/form_squad_relativelayout_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/form_squad_edittext_squad_name"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/form_squad_button_remove"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="#659025"
                    android:text="@string/button_remove"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_small"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/form_squad_button_save"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="#659025"
                    android:text="@string/button_save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_small"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/form_squad_button_students"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/form_project_button_remove"
                    android:layout_marginTop="@dimen/view_margintop_medium"
                    android:background="#659025"
                    android:text="@string/form_squad_button_students"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_small"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>