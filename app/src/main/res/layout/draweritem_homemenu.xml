<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/draweritem_homemenu_colorview"
        android:layout_width="@dimen/draweritem_homemenu_colorview_width"
        android:layout_height="@dimen/draweritem_homemenu_colorview_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/draweritem_textview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/draweritem_textview_height"
        android:layout_toRightOf="@id/draweritem_homemenu_colorview"
        android:layout_alignBaseline="@id/draweritem_homemenu_colorview"
        android:paddingLeft="@dimen/activitycontent_padding"
        android:gravity="left|center_vertical"
        android:text="@string/draweritem_textview"
        android:textSize="@dimen/textsize_large"/>

    <View
        android:id="@+id/draweritem_dividerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerview_height_small"
        android:layout_below="@id/draweritem_textview"
        android:background="@color/primary_material_light"/>

</RelativeLayout>

