<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/tabitemproject_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/recycleritem_padding"
        android:paddingTop="@dimen/recycleritem_padding"
        android:paddingBottom="@dimen/recycleritem_padding">

        <TextView
            android:id="@+id/tabitemproject_textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="left|center_vertical"
            android:text="@string/tabitem_project_textview_title"
            android:textColor="@color/customBlue"
            android:textSize="@dimen/textsize_xlarge"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tabitemproject_textview_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tabitemproject_textview_title"
            android:layout_marginTop="@dimen/view_margin_small"
            android:gravity="left|center_vertical"
            android:text="@string/tabitem_project_textview_code"
            android:textSize="@dimen/textsize_medium"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tabitemproject_textview_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tabitemproject_textview_code"
            android:gravity="left|center_vertical"
            android:text="@string/tabitem_project_textview_description"
            android:textSize="@dimen/textsize_medium"
            android:minLines="1"
            android:maxLines="3"
            android:ellipsize="end"/>

    </RelativeLayout>

    <View
        android:id="@+id/tabitemproject_dividerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerview_height_small"
        android:layout_below="@id/tabitemproject_relativelayout"
        android:background="@color/primary_material_light"/>

</RelativeLayout>

