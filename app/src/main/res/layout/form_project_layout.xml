<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activitycontent_padding"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/form_project_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/form_project_textview_title"
            android:textColor="#dda600"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#dda600" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:weightSum="4">

            <TextView
                android:id="@+id/form_project_textview_year"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:layout_weight="2"
                android:background="#dda600"
                android:padding="7dp"
                android:text="@string/form_project_textview_year"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/form_project_textview_project_year"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#eff1f2"
                android:gravity="right|center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:weightSum="4"
            android:gravity="center">

            <TextView
                android:id="@+id/form_project_textview_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:layout_weight="2"
                android:background="#dda600"
                android:padding="7dp"
                android:text="@string/form_project_textview_id"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/form_project_textview_project_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#eff1f2"
                android:gravity="right|center_vertical" />

        </LinearLayout>

        <EditText
            android:id="@+id/form_project_edittext_project_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:background="@drawable/edit_text_holo_light"
            android:hint="@string/form_project_edittext_project_title_hint"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:singleLine="true" />

        <RadioGroup
            android:id="@+id/form_project_radiogroup_project_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#eff1f2"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp" >

            <RadioButton
                android:id="@+id/form_project_radiobutton_project_grade_l1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="L1" />

            <RadioButton
                android:id="@+id/form_project_radiobutton_project_grade_l2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="L2" />

            <RadioButton
                android:id="@+id/form_project_radiobutton_project_grade_l3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="L3" />

            <RadioButton
                android:id="@+id/form_project_radiobutton_project_grade_m1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="M1" />

            <RadioButton
                android:id="@+id/form_project_radiobutton_project_grade_m2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="M2" />

        </RadioGroup>

        <TextView
            android:id="@+id/form_project_textview_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/form_project_textview_description"
            android:textColor="#dda600"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#dda600" />

        <EditText
            android:id="@+id/form_project_textview_project_description"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="#f9f9f9"
            android:ems="10"
            android:gravity="left|top"
            android:padding="5dp"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/form_project_button_create"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:background="#dda600"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/button_create"
                android:textColor="@color/white"
                android:visibility="invisible" />

            <Button
                android:id="@+id/form_project_button_remove"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:background="#dda600"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/button_remove"
                android:textColor="@color/white"
                android:visibility="visible" />

            <Button
                android:id="@+id/form_project_button_remove_all"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:background="#dda600"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/form_project_button_remove_all"
                android:textColor="@color/white"
                android:visibility="visible" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>