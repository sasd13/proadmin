<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical" >

    <Spinner
        android:id="@+id/projects_spinner_academiclevels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/projects_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/projects_spinner_academiclevels"
        android:layout_marginTop="@dimen/viewgroup_margin"
        android:text="@string/projects_textview"
        android:textColor="@color/customOrange"
        android:textStyle="bold"
        android:textSize="@dimen/textsize_medium"/>

    <View
        android:id="@+id/projects_dividerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerview_height_medium"
        android:layout_below="@id/projects_textview"
        android:layout_marginTop="@dimen/dividerview_margintop"
        android:background="@color/customOrange"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/projects_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/projects_dividerview"
        android:layout_marginTop="@dimen/viewgroup_margin"
        android:layout_gravity="center"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay"/>

</RelativeLayout>