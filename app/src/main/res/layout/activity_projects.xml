<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    android:scrollbars="vertical" >

    <RelativeLayout
        android:id="@+id/projects_relativelayout_academiclevels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/projects_textview_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/projects_textview_academiclevels"
            android:textColor="@color/customOrange"
            android:textStyle="bold"
            android:textSize="@dimen/textsize_medium"/>

        <Spinner
            android:id="@+id/projects_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/projects_textview_level"/>

    </RelativeLayout>



    <TextView
        android:id="@+id/projects_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/projects_relativelayout_academiclevels"
        android:layout_marginTop="@dimen/viewgroup_margin"
        android:text="@string/projects_textview_projects"
        android:textColor="@color/customOrange"
        android:textStyle="bold"
        android:textSize="@dimen/textsize_medium"/>

    <View
        android:id="@+id/projects_dividerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dividerview_height_medium"
        android:layout_below="@id/projects_textview"
        android:layout_marginTop="@dimen/dividerview_margintop"
        android:background="@color/customOrange"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/projects_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/projects_dividerview"
        android:layout_gravity="center"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay"/>

</RelativeLayout>