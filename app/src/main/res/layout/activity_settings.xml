<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/settings_linearlayout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dda600"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:background="#337caa" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="#337caa"
                android:gravity="center|right"
                android:paddingRight="20dp"
                android:text="@string/activity_settings_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activitycontent_padding">

            <include
                android:id="@+id/settings_layout_teacher_edit"
                layout="@layout/form_user_layout_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"/>

            <Button
                android:id="@+id/settings_button_logout"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_below="@id/settings_layout_teacher_edit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/viewgroup_margintop"
                android:layout_gravity="center"
                android:text="@string/button_logout"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_small"
                android:textStyle="bold"
                android:background="#337caa"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>