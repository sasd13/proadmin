<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activitycontent_padding"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/project_new_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="@string/project_new_textview_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#dda600"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#dda600" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="4">

            <TextView
                android:id="@+id/project_new_textview_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="3"
                android:background="#dda600"
                android:padding="7dp"
                android:text="@string/project_new_textview_project_year"
                android:textColor="#FFFFFF" />

            <Spinner
                android:id="@+id/project_new_spinner_year"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="1"
                android:background="#eff1f2"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:gravity="center">

                <TextView
                    android:id="@+id/project_new_textview_project_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="#dda600"
                    android:padding="7dp"
                    android:text="@string/project_new_textview_project_id"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/project_new_edittext_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center" />

            </LinearLayout>

            <EditText
                android:id="@+id/projet_new_edittext_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:hint="@string/project_new_edittext_project_title_hint"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1" />

            <RadioGroup
                android:id="@+id/projet_radioGroup_niveaux"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#eff1f2"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="3dp" >

                <RadioButton
                    android:id="@+id/projet_radioButton_licence1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:checked="true"
                    android:text="L1" />

                <RadioButton
                    android:id="@+id/projet_radioButton_licence2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="L2" />

                <RadioButton
                    android:id="@+id/projet_radioButton_licence3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="L3" />

                <RadioButton
                    android:id="@+id/projet_radioButton_master1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="M1" />

                <RadioButton
                    android:id="@+id/projet_radioButton_master2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="M2" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/libelle_description_projet" />

                <Button
                    android:id="@+id/projet_bouton_supprimer"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="#dda600"
                    android:onClick="ButtonOnclick"
                    android:padding="3dp"
                    android:text="@string/libelle_supprimer_projet"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="590dp"
                android:layout_height="2dp"
                android:background="#8a8a8a" />

            <EditText
                android:id="@+id/projet_editText_description"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="10dp"
                android:background="#f9f9f9"
                android:ems="10"
                android:gravity="left|top"
                android:hint="@string/description"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>